INCLUDE "../main/constants.zkasm"
INCLUDE "../main/vars.zkasm"

start:
    ; set root state & init root touched
    0xABCDEFn => SR
    :CALL(initTouchedTree)

    ; check touched root is 0
    $ => A          :MLOAD(touchedSR)
    0               :ASSERT

    ; set address
    0x0123456789012345678901234567890123456789n => A
    ; cold address and mark it as warm
                    :CALL(isWarmedAddress)
    D => A
    1               :ASSERT

    ; warm address
    0x0123456789012345678901234567890123456789n => A
                    :CALL(isWarmedAddress)
    D => A
    0               :ASSERT

    ; set address & storage position
    0x0123456789012345678901234567890123456789n => A
    0xAn => C
    ; cold slot and mark it as warm
                    :CALL(isWarmedSlot)
    1               :ASSERT

    ; warm slot
    0x0123456789012345678901234567890123456789n => A
    0xAn => C
                    :CALL(isWarmedSlot)
    0               :ASSERT

    ; warm precompiled
    0x3n => A
                    :CALL(isWarmedAddress)
    D => A
    0               :ASSERT

    ; cold zero address
    0x0n => A
                    :CALL(isWarmedAddress)
    D => A
    1               :ASSERT

    ; warm zero address
    0x0n => A
                    :CALL(isWarmedAddress)
    D => A
    0               :ASSERT

    0 => A,B,C,D,E,CTX, SP, PC, GAS, MAXMEM, SR, HASHPOS, RR ; Set all registers to 0
    finalizeExecution:
                                                                        :JMP(finalWait)

INCLUDE "../main/end.zkasm"
INCLUDE "../main/touched.zkasm"