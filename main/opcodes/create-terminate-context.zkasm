/**
 * @link [https://www.evm.codes/#fd?fork=berlin]
 * @zk-counters
 *  - 1000 steps
 * @process-opcode
 *  - stack input: [offset, size]
 *  - stack output: none
 */
opREVERT:
    ; checks zk-counters
    %MAX_CNT_STEPS - STEP - 400 :JMPN(outOfCountersStep)
    ; check stack underflow
    SP - 2          :JMPN(stackUnderflow)
    ; load initSR to revert al state changes
    $ => SR         :MLOAD(initSR)
    ; revert touched accounts
                    :CALL(revertTouched)
    SP - 1 => SP
    $ => E          :MLOAD(SP--); [offset => E]
    $ => C          :MLOAD(SP); [size => C]
    E               :MSTORE(retDataOffset)
    C               :MSTORE(retDataLength)
    ; store lastMemOffset for memory expansion gas cost
    E               :MSTORE(lastMemOffset)
    ; store lastMemLength for memory expansion gas cost
    C               :MSTORE(lastMemLength)
    ; compute memory expansion gas cost
                    :CALL(saveMem); in: [lastMemOffset, lastMemLength]
    ; check if first context
    $ => B          :MLOAD(originCTX)
    ${eventLog(onError, revert)}
    0               :MSTORE(gasRefund)
    ; if origin ctx is 0, end tx
    B - 1           :JMPN(handleGas)
    ; decrease CTX
    $ => A          :MLOAD(currentCTX)
    B => CTX
    ; add return data context value to origin context
    A               :MSTORE(retDataCTX)
    ; return left gas to origin CTX
    $ => B          :MLOAD(gasCTX)
    GAS + B => GAS

    A => CTX
    $ => D          :MLOAD(retCallLength)
    C => A
    D => B
    $               :LT,JMPC(preREVERT32)
    D => C

; copy from memory current CTX to memory origin CTX
preREVERT32:
    $ => B          :MLOAD(retCallOffset)

opREVERT32:
    ; checks zk-counters
    %MAX_CNT_STEPS - STEP - 200 :JMPN(outOfCountersStep)

    C - 1           :JMPN(opREVERTend)
    C - 32          :JMPN(opREVERTfinal)
    ; load first 32 bytes from memory at current CTX
                    :CALL(MLOAD32); in: [E: offset] out: [A: value, E: new offset]
    E => D
    $ => CTX        :MLOAD(originCTX)
    B => E
     ; set bytesToStore with value to use in MSTORE
    A               :MSTORE(bytesToStore)
    ; store 32 bytes at origin CTX
                    :CALL(MSTORE32); in: [bytesToStore, E: offset] out: [E: new offset]
    E => B
    D => E
    C - 32 => C
    ; restore current CTX
    $ => CTX        :MLOAD(currentCTX)
                    :JMP(opREVERT32)

opREVERTfinal:
    ; copy last bytes
                    :CALL(MLOADX); in: [E: offset, C: length] out: [A: value, E: new offset]
    $ => CTX        :MLOAD(originCTX)
    B => E
    A               :MSTORE(bytesToStore)
                    :CALL(MSTOREX); in: [bytesToStore, E: offset, C: length] out: [E: new offset]
    $ => CTX        :MLOAD(currentCTX)

opREVERTend:
    ; decrease CTX and restore SP and PC
    $ => CTX        :MLOAD(originCTX)
    CTX             :MSTORE(currentCTX)
    $ => SP         :MLOAD(lastSP)
    $ => PC         :MLOAD(lastPC)
    0               :MSTORE(SP++); [0 => SP]
    ; check stack overflow
    1024 - SP       :JMPN(stackOverflow)
    ; decrease depth
    $ => A          :MLOAD(depth)
    A - 1           :MSTORE(depth)
                    :JMP(readCode)

; // TODO: handle if depth is over 0
; SELFDESTRUCT is deprecated and EIP-4758 is implemented: https://eips.ethereum.org/EIPS/eip-4758
; SELFDESTRUCT is now SENDALL
/**
 * @link [https://www.evm.codes/#ff?fork=berlin] (selfdestruct)
 * @zk-counters
 *  - 10 binary
 *  - 2040 poseidon
 *  - 600 steps
 * @process-opcode
 *  - stack input: [address]
 *  - stack output: none
 */
opSENDALL:

    ; checks zk-counters
    %MAX_CNT_BINARY - CNT_BINARY - 10 :JMPN(outOfCountersBinary)
    %MAX_CNT_POSEIDON_G - CNT_POSEIDON_G - 2040 :JMPN(outOfCountersPoseidon)
    %MAX_CNT_STEPS - STEP - 400 :JMPN(outOfCountersStep)

    ; check stack underflow
    SP - 1 => SP        :JMPN(stackUnderflow)

    ; check is static
    $ => A              :MLOAD(isStaticCall)
    0 - A               :JMPN(invalidStaticTx)
    ; check out-of-gas
    GAS - 5000 => GAS   :JMPN(outOfGas)

    $ => A              :MLOAD(storageAddr)
    ; set key for smt balance query
    %SMT_KEY_BALANCE => B
    0 => C
    ; balance in D
    $ => D              :SLOAD

    $ => A              :MLOAD(SP); [address => A]
    ; Mask address to 20 bytes
                    :CALL(maskAddress); in: [A: address] out: [A: masked address]
    ; check if storage address has balance to withdraw
    A => C
    A => E
    0 => A
    D => B
    $                           :EQ,JMPC(opSENDALL2)
                                :CALL(isEmptyAccount); in: [E: address] out: [E: 0 if is not empty, 1 if is empty]
    GAS - 25000 * E => GAS      :JMPN(outOfGas)

opSENDALL2:
    ; check is cold to compute gas cost
    C => A
                              :CALL(isColdAddress); in: [A: address] out: [D: 0 if warm, 1 if cold]
    GAS - 2600 * D => GAS     :JMPN(outOfGas)
    B                         :MSTORE(arithA)
    ; read previous balance receiver
    ; set key for smt balance query
    %SMT_KEY_BALANCE => B
    0 => C
    ; balance in E
    $ => E              :SLOAD

    ; compute new receiver balance
    ; Add operation with Arith
    E               :MSTORE(arithB)
                    :CALL(addARITH); in: [arithA, arithB] out[arithRes1: arithA*arithB]
    $ => D          :MLOAD(arithRes1)

    ; transfer balance to receiver
    $ => A                  :MLOAD(SP); [address => A]
    %SMT_KEY_BALANCE => B
    0 => C
    $ => SR                 :SSTORE

    ; set contract balance to 0
    $ => A                  :MLOAD(storageAddr)
    0 => D
    $ => SR                 :SSTORE
    ; if origin ctx is 0, end tx
    $ => A                  :MLOAD(originCTX)
    $                       :EQ,JMPC(handleGas)
    ; decrease CTX
    $ => B                  :MLOAD(gasRefund)
    $ => C                  :MLOAD(isCreate)
    1 => D
    C - 1                   :JMPN(opSENDALLend)
    $ => D                  :MLOAD(createContractAddress)

opSENDALLend:
    A => CTX
    0                       :MSTORE(retDataCTX)
    CTX                     :MSTORE(currentCTX)
    B                       :MSTORE(gasRefund)
    $ => C                  :MLOAD(gasCTX)
    GAS + C => GAS
    ; restore origin CTX values
    $ => SP                 :MLOAD(lastSP)
    $ => PC                 :MLOAD(lastPC)
    D                       :MSTORE(SP++); [output => SP]
    ; check stack overflow
    1024 - SP               :JMPN(stackOverflow)
    ; decrease depth
    $ => A                  :MLOAD(depth)
    A - 1                   :MSTORE(depth)
                            :JMP(readCode)
/**
 * @link [https://www.evm.codes/#fe?fork=berlin]
 * @zk-counters
 *  - 120 steps
 * @process-opcode
 *  - stack input: none
 *  - stack output: none
 */
opINVALID:
    ; checks zk-counters
    %MAX_CNT_STEPS - STEP - 100 :JMPN(outOfCountersStep)
                                :JMP(invalidProcess)
