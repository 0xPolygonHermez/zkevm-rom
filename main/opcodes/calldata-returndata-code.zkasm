    $ => E                          :MLOAD(nextHashPId)
    E                               :MSTORE(tmpContractHashId)
    E + 1                           :MSTORE(nextHashPId)

    ; load contract bytecode
    A                               :HASHPDIGEST(E)
opEXTCODECOPYCheckHashEnd:
