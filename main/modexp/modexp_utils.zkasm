    $                   :EQ,JMPC(modexp_saveModLen)
    E + 1               :MSTORE(modexp_Mlen),JMP(modexp_getReturn)

modexp_getReturn:
    $ => RR             :MLOAD(tmpZkPCmodexp)
    $ => A              :MLOAD(tmpVarAmodexp)
    $ => B              :MLOAD(tmpVarBmodexp)
    $ => C              :MLOAD(tmpVarCmodexp)
    $ => D              :MLOAD(tmpVarDmodexp)
    $ => E              :MLOAD(offsetInitModexp)
    E + C => E
                        :RETURN
