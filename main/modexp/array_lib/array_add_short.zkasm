;     let carry = b;
;     for (let i = 0; i < alen; i++) {
;         sum = a[i] + carry;
;         carry = sum >= B ? 1n : 0n;
;         result[i] = sum - carry * B;
;     }

;     if (carry === 1n) {
;         result.push(carry);
;     }
;     return result;
